#!/usr/bin/env node

require( 'shelljs/global' )

var path = require( 'path' )
var argv = require( 'yargs' ).argv


var tempdir = path.resolve( __dirname, '../template' )
var prodir = path.resolve( argv.d || './' )

mkdir( '-p', prodir )

switch ( argv.c ) {
    case 'vue':
        genVue()
    case 'rudex':
        genRudex()
    case 'common':
        genCommon()
        break
    default:
        genCommon()
}

function genCommon() {
    cp( '-R', `${tempdir}/common/*`, prodir )
    console.log( 'gen dir ok , at ' + prodir )
}

function genVue() {
    cp( '-R', `${tempdir}/vue/*`, prodir )
}

function genRudex() {
    cp( '-R', `${tempdir}/rudex/*`, prodir )
}